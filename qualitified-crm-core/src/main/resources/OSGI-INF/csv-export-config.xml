<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.csv.export.config.qualitified" version="1.0.0">
    <require>org.nuxeo.ecm.core.bulk</require>
    <extension target="org.nuxeo.ecm.core.bulk" point="actions">
        <action name="csvExportCustom" bucketSize="100" batchSize="50" httpEnabled="true"
                validationClass="org.nuxeo.ecm.platform.csv.export.validation.CSVExportValidation"/>
    </extension>

    <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">
        <!-- CSV exporter processor -->
        <streamProcessor name="csvExportCustom" class="org.qualitified.crm.csv.export.action.QualitifiedCSVExportAction" logConfig="bulk"
                         defaultConcurrency="2" defaultPartitions="2">
            <policy name="default" maxRetries="3" delay="1s" maxDelay="10s" continueOnFailure="true" />
            <option name="produceImmediate">false</option>
        </streamProcessor>
    </extension>

</component>